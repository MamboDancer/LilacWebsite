    function getTimeNow() {
        var currentdate = new Date();
        return datetime = currentdate.getDate() + "/"
            + (currentdate.getMonth() + 1) + "/"
            + currentdate.getFullYear() + " @ "
            + currentdate.getHours() + ":"
            + currentdate.getMinutes() + ":"
            + currentdate.getSeconds()
    }

    function parseCart(cart, userData) {

        var price = 0
        var parsedCart = `*–ù–æ–≤–µ –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è: *
                            %0A${getTimeNow()}`
        var count = 0
        cart.forEach(el => {
            parsedCart += `
            %0A‚Ññ${++count}
            %0A*–¢–æ–≤–∞—Ä*: ${el.flowerName} 
            %0A*–ö—ñ–ª—å–∫—ñ—Å—Ç—å*: ${el.flowerCount} —à—Ç
            %0A*–¶—ñ–Ω–∞*: ${el.flowerPrice} ‚Ç¨
            %0A---%0A
            `
            price += el.flowerPrice
        })
        userData.packing ? price += 70 : false
        parsedCart += `%0A*–ü–∞–∫—É–≤–∞–Ω–Ω—è : * ${userData.packing ? "–¢–ê–ö" : "–ù–Ü"}`
        parsedCart += `%0A–ó–∞–≥–∞–ª—å–Ω–∞ —Ü—ñ–Ω–∞ –∫–æ—Ä–∑–∏–Ω–∏ : ${price} ‚Ç¨`
        parsedCart += `
            %0A
            %0A%0A*–ü–æ–∫—É–ø–µ—Ü—å : *
            %0A---
            %0A*–Ü–º'—è*: ${userData.username} 
            %0A*–ê–¥—Ä–µ—Å–∞ –¥–æ—Å—Ç–∞–≤–∫–∏*: ${$(".pickup").prop("checked") ? "üôÖ–ó–∞–±–µ—Ä—É —Å–∞–º" : `üó≥Ô∏è${userData.useraddress} %0A*–ß–∞—Å –¥–æ—Å—Ç–∞–≤–∫–∏*:‚è∞${userData.usertime} , üìÖ${userData.userdate}`}
            %0A*–¢–µ–ª–µ—Ñ–æ–Ω: *: ${userData.usernumber}
            %0A---
            `
        return parsedCart
    }
    function sendOrder(userData) {
        let tgResponce = false
        let dbResponce = false
        let CART = localStorage.getItem('cart')
        const cart = parseCart(JSON.parse(CART), userData)
        const UD = `[${JSON.stringify(userData)}]`
        CART = `[${CART.substring(1, CART.length - 1)}]`
        const CURRENTTIME = getTimeNow()
        const ORDERTIME = `${userData.usertime}/${userData.userdate}`
        const PACKING = userData.packing
        $.post(`/api/db/createOrder`, { CART, UD, CURRENTTIME, ORDERTIME, PACKING })
            .always(function (dbstatus) {
                if (dbstatus) dbResponce = true
                $.post(`/sendorder`, { cart })
